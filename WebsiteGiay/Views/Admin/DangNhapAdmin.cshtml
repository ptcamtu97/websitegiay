@using WebsiteGiay.Models;
@model NhanVienModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập Admin - T&N</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Pooled Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Bootstrap Core CSS -->
    <link href="~/ContentAdmin/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom CSS -->
    <link href="~/ContentAdmin/css/style.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="css/morris.css" type="text/css" />
    <!-- Graph CSS -->
    <link href="~/ContentAdmin/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="~/ContentAdmin/css/jquery-ui.css">
    <!-- jQuery -->
    <script src="~/ContentAdmin/js/jquery-2.1.4.min.js"></script>
    <!-- //jQuery -->
    <link href='//fonts.googleapis.com/css?family=Roboto:700,500,300,100italic,100,400' rel='stylesheet' type='text/css' />
    <link href='//fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <!-- lined-icons -->
    <link rel="stylesheet" href="~/ContentAdmin/css/icon-font.min.css" type='text/css' />
    <!-- //lined-icons -->

</head>
<body>
    <div class="main-wthree">
        <div class="container">
            <div class="sin-w3-agile">
                <h2>ĐĂNG NHẬP</h2>
                @using (Html.BeginForm())
                {
                <form action="#" method="post">
                    <div class="username">
                        <span class="username">Tên đăng nhập:</span>
                        @*<input type="text" name="name" class="name" placeholder="" required="">*@
                        @Html.TextBoxFor(m => m.TenDN, new { @class = "name" });
                        <div class="clearfix"></div>
                    </div>
                    <div class="password-agileits">
                        <span class="username">Mật khẩu:</span>
                        @*<input type="password" name="password" class="password" placeholder="" required="">*@
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "password" });
                        <div class="clearfix"></div>
                    </div>
                    <div class="rem-for-agile">
                        <input type="checkbox" name="remember" class="remember">Nhớ mật khẩu<br>
                    </div>
                    <div class="login-w3">
                        <input type="submit" class="login" value="Đăng nhập">
                    </div>
                    @ViewBag.ThongBao
                    <div class="clearfix"></div>
                </form>
                }
                <div class="back">
                    <a href="~Home/Index">Về trang chủ</a>
                </div>
                <div class="footer">
                    <p class="copy-right">&copy; @DateTime.Now.Year T&N Shoes | Thiết kế bởi <a href="#">Cẩm Tú - Thu Nga</a></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
